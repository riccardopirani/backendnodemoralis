# ========================================
# JetCV NFT Backend - Environment Variables
# ========================================

# ======================== BLOCKCHAIN CONFIGURATION ========================
# RPC Endpoints (scegli uno):
# GRATUITO - Polygon RPC pubblico (limitato)
ANKR_RPC_URL=https://polygon-rpc.com

# GRATUITO - Alchemy (richiede registrazione)
# ANKR_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# GRATUITO - Infura (richiede registrazione)  
# ANKR_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# A PAGAMENTO - Ankr (pi√π veloce, ma costa)
# ANKR_RPC_URL=https://rpc.ankr.com/polygon/YOUR_API_KEY

# Contract address
CONTRACT_ADDRESS=0xC64eD38428C9183B36baB5D9be80b489853bee86

# Private key per le transazioni (NON CONDIVIDERE!)
PRIVATE_KEY=your_private_key_here

# Chiave di crittografia per le chiavi private
ENCRYPTION_SECRET=your_32_character_encryption_secret_here

# ======================== STORAGE CONFIGURATION ========================
# Web3 Storage API token for file uploads
WEB3_STORAGE_TOKEN=your_web3_storage_token_here

# Lighthouse API key for file uploads
LIGHTHOUSE_API_KEY=your_lighthouse_api_key_here

# ======================== DATABASE CONFIGURATION ========================
# PostgreSQL connection string
# For local development:
DATABASE_URL=postgresql://jetcv_user:jetcv_password@localhost:5432/jetcv_db

# For Docker:
# DATABASE_URL=postgresql://jetcv_user:jetcv_password@postgres:5432/jetcv_db

# ======================== SERVER CONFIGURATION ========================
# Server port (default: 4000)
PORT=4000

# Environment (development, production, test)
NODE_ENV=development

# ======================== OPTIONAL CONFIGURATION ========================
# Redis connection URL (optional, for caching)
REDIS_URL=redis://localhost:6379

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================== SECURITY CONFIGURATION ========================
# JWT secret for authentication (if needed)
JWT_SECRET=your_jwt_secret_here

# API key for external services
API_KEY=your_api_key_here

# ======================== MONITORING CONFIGURATION ========================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# ======================== DEPLOYMENT CONFIGURATION ========================
# AWS configuration (for deployment)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ========================================
# IMPORTANT: Replace all "your_*_here" values with your actual configuration
# ========================================
